Sub CopiarDadosParaNovoWorkbook()
    Dim wbNovo As Workbook
    Dim wsAtual As Worksheet
    Dim wsNovo As Worksheet
    Dim nomeSheets As Variant
    Dim i As Integer

    ' Define os nomes das sheets que serão copiadas
    nomeSheets = Array("Fundos", "Renda Fixa", "Renda Variável", "Conta Corrente")

    ' Cria um novo workbook
    Set wbNovo = Workbooks.Add

    ' Itera pelas sheets especificadas
    For i = LBound(nomeSheets) To UBound(nomeSheets)
        ' Verifica se a sheet existe
        On Error Resume Next
        Set wsAtual = ThisWorkbook.Sheets(nomeSheets(i))
        On Error GoTo 0
        
        If Not wsAtual Is Nothing Then
            ' Adiciona uma nova sheet no workbook novo
            Set wsNovo = wbNovo.Sheets.Add
            wsNovo.Name = nomeSheets(i)
            
            ' Copia os dados das colunas A até J para a nova sheet
            wsAtual.Range("A:J").Copy Destination:=wsNovo.Range("A1")
        End If
        ' Limpa a referência para a próxima iteração
        Set wsAtual = Nothing
    Next i

    ' Salva e exibe o novo workbook
    wbNovo.Activate
End Sub